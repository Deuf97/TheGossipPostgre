<h1>Liste de tous les Gossips</h1>
    <div class="container d-flex flex-wrap">
    <% @gossips.each_with_index do |gossip, index| %>
         <div class="card col-3" style="width: 18rem;" margin= 2px>  
           <div class="card-body">
            <h5 class="card-title"><%= gossip.user.first_name%>  <%=gossip.user.last_name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%=gossip.title %></h6>
            <p><%= gossip.id%></p>
                <p class="card-text"><%= gossip.content %></p>
                <a href="gossip/<%=gossip.id%>" class="card-link">Edition</a>
                <a href="user/<%=gossip.user.id%>" class="card-link">Profil User</a>
            </div>
        </div>
      <% end %></div>
